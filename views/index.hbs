            <div class="left_content">
                <div class="left_sort">
                    <h2 class="left_title manage_film">Manage films</h2>
                    <div class="sort">
                        <label for="sort_by">Sort By</label>
                        <select id="sort_by" onchange="sortedFilm()">
                            <option value="none">none</option>
